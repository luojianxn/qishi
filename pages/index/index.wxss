/**index.wxss**/
/* 轮播图 */
.swiper{
    width:100%;
    margin:0rpx;
}
.swiper image{
    display: inline;
}
.nav_top{
    display:flex;
    flex-flow: row wrap;
    justify-content: space-between;
    width:100%;
    box-sizing: border-box;
    padding:20rpx 10rpx;   
}

.nav_top_items{
    text-align: center;
    font-size:20rpx;
    width:140rpx;
    border-radius:8rpx;
    box-sizing:border-box;
}

.nav_top_items image{
    width:70rpx;
    height:80rpx;
    display: inline-block;
}

.nav_top_items text{
    display:block;
}

.nav_section{
  width:100%
}
.nav_section_buttons{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    background:white;
}

.nav_section_buttons .button{
  padding-left:20rpx;
  padding-right:20rpx;
  padding-top:10rpx;
  padding-bottom:10rpx;
  background:green;
}

.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
    background: black
}
.nav_section_items .item1{
   width:170rpx;
   height:170rpx;
   background: rgb(155, 24, 24)
}

.topnav{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    position: fixed;
    top: 0rpx;
    z-index:99;
    width: 100%;
    background:white;
}
.topnav .button{
  padding-left:20rpx;
  padding-right:20rpx;
  padding-top:10rpx;
  padding-bottom:10rpx;
  background:green;
}
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
